<%= stylesheet_link_tag 'issue_view_columns', plugin: "redmine_issue_view_columns", media: 'all'%>
<%= javascript_include_tag(:'issue_view_default_columns', plugin: "redmine_issue_view_columns") %>

<fieldset class="box">
  <legend>Select default columns for issue's subtasks and related issues:</legend>
    <%= render_query_columns_selection(
            IssueQuery.new(:column_names => Setting.plugin_redmine_issue_view_columns["issue_view_default_columns"]),
            :name => 'settings[issue_view_default_columns]') %>
</fieldset>

<style>
.tabular.settings label {
    margin-left: 0px !important;
    font-weight: bold !important;
}

.tabular label {
    text-align: right !important;
    float: none !important;
}
</style>
